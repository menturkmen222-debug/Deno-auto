{
  "$schema": "https://deno.land/x/deno@v1.45.0/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --unstable-kv main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --unstable-kv main.ts",
    "check": "deno check main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/fmt": "jsr:@std/fmt@1.0.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "unstable": ["kv"]
}
